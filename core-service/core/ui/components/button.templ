package components

templ Button(text string, disabled bool) {
	<button
		class="disabled:opacity-75 disabled:bg-slate-500
    disabled:cursor-not-allowed bg-blue-600 hover:bg-blue-700 
    text-white font-bold py-2 px-4 rounded 
    focus:outline-none focus:shadow-outline"
		type="submit"
		disabled?={ disabled }
	>
		{ text }
	</button>
}
